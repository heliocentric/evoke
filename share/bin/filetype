# $Id$
FORFS="
"

type_check() {
	MIME="$(getextattr -q user mime_type "${1}")"
	CACHE_MTIME="$(getextattr -q user mime_mtime "${1}")"

	if [ "${CACHE_MTIME}" = "" ] ; then
		CACHE_MTIME=0
	fi

	REAL_MTIME="$(stat -f "%m" "${1}" 2>/dev/null)"

	if [ "${2}" != "" ] ; then
		MIME="${2}"
	else
		if [ "${MIME}" = "" -o "${FORCE_WRITE_MIME}" = "yes" -o "${REAL_MTIME}" -gt "${CACHE_MTIME}" -o "${FILEDB_MTIME}" -gt "${CACHE_MTIME}" ] ; then
			if [ "${WARNING}" = "yes" ] ; then
				echo "WARNING: 1 ${1}"
			fi
			MIME="$(file -bL --mime-type "${1}" | cut -d , -f 1)"
			setextattr -q user mime_type "${MIME}" "${1}"
			setextattr -q user mime_mtime "$(date "+%s")" "${1}"
		fi
	fi
	if [ "${ECHO_FILE}" != "no" ] ; then
		echo "${1}:" "${MIME}"
	else
		echo "${MIME}"
	fi
}

filetype () {
	FORCE_WRITE_MIME="no"
	if [ "${OPTIONS}" != "" ] ; then
		for option in ${OPTIONS}
		do
			case "${option}" in
				norecurse)
					EVOKE_FTRECURSE="no"
				;;
				recurse)
					EVOKE_FTRECURSE="yes"
				;;
				seperatemount)
					EVOKE_MOUNTPOINTTYPE="yes"
				;;
				quiet)
					ECHO_FILE="no"
				;;
				write)
					FORCE_WRITE_MIME="yes"
				;;
			esac
		done
	fi
	while [ "${1}" != "" ]
	do
		case "${1}" in
			*)
				eval local $(stat -f "STAT_DEV=%d STAT_TYPE=\"%HT\"" "${1}")
				case "${STAT_TYPE}" in
					Directory)
						local STAT_NDEV=$(stat -f "%d" "$(dirname ${1})")
						if [ "${STAT_NDEV}" != "${STAT_DEV}" -a "${EVOKE_MOUNTPOINTTYPE}" = "yes" ] ; then
							type_check "${1}" "inode/mount-point"
						else
							type_check "${1}" "inode/directory"
						fi
						if [ "${EVOKE_FTRECURSE}" != "no" ] ; then
							for entry in $(ls -a "${1}")
							do
									if [ "${entry}" != "." -a "${entry}" != ".." ] ; then
									filetype "${1}/${entry}"
								fi
							done
						fi
	
					;;
					"Socket")
						type_check "${1}" "inode/socket"
					;;
					"Fifo File")
						type_check "${1}" "inode/fifo"
					;;
					"Character Device")
						type_check "${1}" "inode/chardevice"
					;;
					"Symbolic Link")
						type_check "${1}"
					;;
					"Regular File")
						type_check "${1}"
					;;
				esac
			;;
		esac
		shift
	done
}


if [ -d /system ] ; then
	FILEDB_MTIME="$(stat -f "%m" /system/share/lib/magic.mime 2>/dev/null)"
else
	FILEDB_MTIME="$(stat -f "%m" /usr/share/misc/magic.mime 2>/dev/null)"
fi

filetype $@
