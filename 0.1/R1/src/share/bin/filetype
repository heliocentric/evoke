# $Id$
FORFS="
"

type_check() {
	ATTRIBUTE="$(getextattr -q user mime_type "${1}")"
	if [ "${ATTRIBUTE}" = "" -o "${FORCE_WRITE_MIME}" = "yes" ] ; then
		if [ "${WARNING}" = "yes" ] ; then
			echo "WARNING: 1 ${1}"
		fi
		if [ "${2}" = "" ] ; then
			MIME="$(file -b --mime-type "${1}" | cut -d , -f 1)"
		else
			MIME="${2}"
		fi
		setextattr -q user mime_type "${MIME}" "${1}"
		echo "${1}:" "${MIME}"
	else
		echo "${1}:" "${ATTRIBUTE}"
	fi
}

filetype () {
	while [ "${1}" != "" ]
	do
		local STAT_TYPE="$(stat -f %HT ${1})"
		case "${STAT_TYPE}" in
			Directory)
				type_check "${1}" "inode/directory"
				for entry in $(ls -a "${1}")
				do
					if [ "${entry}" != "." -a "${entry}" != ".." ] ; then
						filetype "${1}/${entry}"
					fi
				done
			;;
			"Regular File")
				type_check "${1}"
			;;
		esac
		shift
	done
}

filetype $@
