# $Id$


size() {
	if [ "${1}" -ge "0" ] ; then
		if [ "${#1}" -le "3" ] ; then
			echo "${1}B"
		elif [ "${#1}" -le "6" ] ; then
			echo "$((${1} / 1000))KB"
		elif [ "${#1}" -le "9" ] ; then
			echo "$((${1} / 1000000))MB"
		elif [ "${#1}" -le "12" ] ; then
			echo "$((${1} / 1000000000))GB"
		elif [ "${#1}" -le "15" ] ; then
			echo "$((${1} / 1000000000000))TB"
		elif [ "${#1}" -le "18" ] ; then
			echo "$((${1} / 1000000000000000))PB"
		elif [ "${#1}" -le "21" ] ; then
			echo "$((${1} / 1000000000000000000))EB"
		fi
	fi
}

size "${@}"
