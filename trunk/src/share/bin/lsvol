# $Id$
sysctl -b kern.geom.conftxt | \
awk '{
	if ($2 == "BSD") {
		if ($11 == "7") {
			print $3":ufs";
		}
		if ($11 == "8") {
			print $3":msdosfs";
		}
		if ($11 == "1") {
			print $3":swap";
		}
		if ($11 == "12") {
			print $3":cd9660";
		}
		if ($11 == "17") {
			print $3":ext2fs";
		}
		if ($11 == "18") {
			print $3":ntfs";
		}
		if ($11 == "24") {
			print $3":udf";
		}
		if ($11 == "27") {
			print $3":zfs";
		}
	}
	else if ($2 == "MBR") {
		if ($11 == "4") {
			print $3":msdosfs";
		}
		else if ($11 == "6") {
			print $3":msdosfs";
		} 
		else if ($11 == "130") {
			print $3":swap";
		} 
		else if ($11 == "131") {
			print $3":linux";
		} 
		else if ($11 == "11") {
			print $3":msdosfs";
		} 
		else if ($11 == "14") {
			print $3":msdosfs";
		} 
		else if ($11 == "7") {
			print $3":ntfs";
		} 
	}
}'
