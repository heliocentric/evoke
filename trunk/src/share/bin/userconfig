# $Id$

if [ ! -c "${DEVICES}/null" ] ; then
	if [ -c "/dev/null" ] ; then
		DEVICES=/dev
	else
		echo "Error, no device nodes found"
		exit 1
	fi
fi

if [ ! -d "${TMPDIR}" ] ; then
	TMPDIR=/tmp
fi


if [ ! -d "${N_SYSCFG}" ] ; then
	N_SYSCFG="/tmp/sysconfig"
	mkdir -p "${N_SYSCFG}"
fi

if [ ! -d "${N_CURUSER}" ] ; then
	N_CURUSER="/tmp/currentuser"
	mkdir -p "${N_CURUSER}"
fi

usage () {
	cat << EOF
usage: userconfig command [UUID] [options]

Commands:
  create	-- Create a directory for a user, and set a password.
  login		-- Login as the user specified.
  list		-- List the users in the sysconfig directory.
  menu		-- Display a pretty menu for choosing the user.

EOF

}

create () {
	. $(command -v menu)
	read -p "Username: " LOGIN
	read -p "Display Name: " DISPNAME
	read -p "Do you already have an Evoke user id? [y/N]: " ANSWER
	case "${ANSWER}" in
		[yY])
			ESCAPE="no"
			until [ "${ESCAPE}" = "yes" ]
			do
				read -p "Enter UUID: " UUID
				if [ "$(is_uuid ${UUID})" = "yes" ] ; then
					if [ -d "${N_SYSCFG}/${UUID}" ] ; then
						echo "Error: user already exists."
						exit 3
					else
						ESCAPE="yes"
					fi
				fi
			done
			unset ESCAPE
		;;
		*)
			ESCAPE="no"
			until [ "${ESCAPE}" = "yes" ]
			do
				UUID="$(uuid -v 4)"
				if [ ! -d "${N_SYSCFG}/${UUID}" ] ; then
					ESCAPE="yes"
				fi
			done
			unset ESCAPE
		;;
	esac

	mkdir -p "${N_SYSCFG}/${UUID}"

	ENCTYPE=$(menu "Encryption Method" "mounter list fs | grep encfs; mounter list fs | grep cryptofs; echo none")
	echo ${ENCTYPE}
	case "${ENCTYPE}" in
		encfs)
			mounter encfs:${N_SYSCFG}/${UUID} ${N_CURUSER} 1>&2
		;;
		cryptofs)
			cat >${N_SYSCFG}/${UUID}/.cryptofs << EOF
[CryptoFS]
cipher=AES256
md=MD5
blocksize=2048
salts=256
EOF
			mounter cryptofs:${N_SYSCFG}/${UUID} ${N_CURUSER} 1>&2
		;;
		*)
			mounter nullfs:${N_SYSCFG}/${UUID} ${N_CURUSER} 1>&2
		;;
	esac
	echo ${DISPNAME} >${N_CURUSER}/display
	echo ${LOGIN} >${N_CURUSER}/login
	echo "${UUID}:${LOGIN}:${DISPNAME}" >>${N_SYSCFG}/userlist
	echo $UUID
}

login () {
	if [ "$(is_uuid ${1})" = "no" ] ; then
		echo "Error: Not UUID"
		exit 4
	fi
	DIRECTORY="${N_SYSCFG}/${1}"
	if [ ! -d "${DIRECTORY}" ] ; then
		echo "Error: User not found"
		exit 5
	fi
	if [ -f "${DIRECTORY}/.cryptofs" ] ; then
		PROTO=cryptofs
	else 
		if [ -f "${DIRECTORY}/.encfs6.xml" ] ; then
			PROTO=encfs
		else
			PROTO=nullfs
		fi
	fi
	mounter ${PROTO}:${N_SYSCFG}/${1} ${N_CURUSER}
}

userconfig () {
	case "${1}" in
		[cC][rR][eE][aA][tT][eE])
			create
		;;
		[lL][oO][gG][iI][nN])
			login ${2}
		;;
		[lL][iI][sS][tT])
			cat ${N_SYSCFG}/userlist | awk -F ":" '{ print $1 " - " $3; }'
		;;

		[mM][eE][nN][uU])
			. $(command -v menu)
			CHOICE=$(menu "Available Users" "userconfig list")
			if [ "$(is_uuid ${CHOICE})" = "yes" ] ; then
				UUID="$(echo "${CHOICE}" | awk '{ print $1 }')"
				echo ${UUID}
			fi
		;;
		*)
			usage
		;;
	esac
}

userconfig $*
