# $Id$
sysctl -b kern.geom.conftxt | \
awk '{
	if ($2 == "PART") {
		# FreeBSD defined values.

		if ($11 == "freebsd-ufs") {
			print $3":ufs";
		}
		if ($11 == "freebsd-swap") {
			print $3":swap";
		}

		# Our usage values.
		if ($11 == "!4b4cf826-e53e-4b56-86b6-0f9b728e0436") {
			print $3":nvram";
		}
		if ($11 == "!fa8e2f44-6728-490a-89ae-a8e286be45af") {
			print $3":dump";
		}
		if ($11 == "!ac4b7c4a-9c4c-4687-b55f-f51a731d36d2") {
			print $3":entropy";
		}
		if ($11 == "!72717d60-1a4b-43e2-bca3-4418bc0669ee") {
			print $3":buildenv-v1";
		}
		if ($11 == "!730ce0da-b0fd-4d05-a023-69ce0d749763") {
			print $3":workenv-v1";
		}
	}
	if ($2 == "BSD") {
		if ($11 == "7") {
			print $3":ufs";
		}
		if ($11 == "8") {
			print $3":msdosfs";
		}
		if ($11 == "1") {
			print $3":swap";
		}
		if ($11 == "12") {
			print $3":cd9660";
		}
		if ($11 == "17") {
			print $3":ext2fs";
		}
		if ($11 == "18") {
			print $3":ntfs";
		}
		if ($11 == "24") {
			print $3":udf";
		}
		if ($11 == "27") {
			print $3":zfs";
		}
	}
	else if ($2 == "MBR") {
		if ($11 == "4") {
			print $3":msdosfs";
		}
		else if ($11 == "6") {
			print $3":msdosfs";
		} 
		else if ($11 == "130") {
			print $3":swap";
		} 
		else if ($11 == "131") {
			print $3":linux";
		} 
		else if ($11 == "11") {
			print $3":msdosfs";
		} 
		else if ($11 == "14") {
			print $3":msdosfs";
		} 
		else if ($11 == "7") {
			print $3":ntfs";
		} 
	}
}'
