#!/bin/sh
# $Id$

case "${1}" in
	[mM][oO][uU][nN][tT])
		if [ -c "/dev/${2}" ] ; then
			sysctl -b kern.geom.conftxt | grep -aw ${2} |  awk '{
				if ($2 == "BSD") {
					
				};
			}'
		else
			echo "/dev/${2} is not a device node"  >&2 
		fi
	;;
	[rR][uU][nN])

	;;
	[aA][uU][tT][oO])
		if [ "$(kenv -q dsbsd.autojail)" != "" ] ; then
			jailer mount $(kenv -q dsbsd.autojail)
			jailer run $(kenv -q dsbsd.autojail)
		fi
	;;
esac
