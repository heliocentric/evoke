# $Id$

if [ "${OPTIONS}" != "" ] ; then
	OPTIONS="-o ${OPTIONS}"
fi

case "${1}" in
	[fF][tT][pP])
		if [ "${2}" != "" ] ; then
			if [ -d "${3}" ] ; then
				curlftpfs ${OPTIONS} ${2} ${3}
			fi
		fi
	;;
	[sS][sS][hH])
		if [ "${2}" != "" ] ; then
			if [ -d "${3}" ] ; then
				sshfs ${OPTIONS} -C ${2} ${3}
			fi
		fi
	;;
	[wW][eE][bB][dD][aA][vV])
		if [ "${2}" != "" ] ; then
			if [ -d "${3}" ] ; then
				wdfs ${OPTIONS} -o accept_sslcert -o svn_mode ${2} ${3}
			fi
		fi
	;;
	[sS][wW][aA][pP])
		if [ "${2}" != "" ] ; then
			if [ "${3}" = "enc" ] ; then
				geli onetime ${2}
				swapon ${2}.eli
			else 
				swapin ${2}
			fi
		fi
	;;
	[nN][tT][fF][sS])
		if [ -c /dev/"${2}" ] ; then
			if [ -d "${3}" ] ; then
				ntfs-3g ${OPTIONS} /dev/${2} ${3}
			fi
		fi
	;;
  	[lL][iI][sS][tT])
		if [ "${2}" != "" ] ; then
			for i in $(lsvol | grep :${2})
			do
				if [ -d "${3}" ] ; then
					mkdir -p ${3}/${i}
					mounter ${2} ${i} ${3}/${i}
				else
					echo ${i} | cut -d : -f 1
				fi
			done
		fi
	;;
	*)
		if [ -c /dev/"${2}" ] ; then
			if [ -d "${3}" ] ; then
				mount ${OPTIONS} -t ${TYPE} /dev/${2} ${3}
			fi
		fi
	;;
esac



